@model List<TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Görsel</th>
        <th>Referans Adı</th>
        <th>Referans Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteStaff/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Staff/UpdateStaff/@item.TestimonialID" class="btn btn-success ">Güncelle</a></td>
            <td><a href="#" class="btn btn-dark">Detaylar</a></td>

        </tr>
    }

</table>
<a href="/Staff/AddStaff/" class="btn btn-info">Yeni Personel Girişi</a>



